{
    "global": {
        "validateImageLinks": true,
        "imagesHaveAltText": true,
        "hyperlinksHaveAltText": true
    },
    "pathRules": [
        {
            "path": "blueprint",
            "type": "directory",
            "shouldExist": true
        },
        {
            "path": "README.md",
            "type": "file",
            "shouldExist": true,
            "shouldContain": [{
                "type": "static",
                "values": ["blueprint/images/overview.png"]
            }]
        },
        {
            "path": "blueprint/index.md",
            "type": "file",
            "shouldExist": true,
            "shouldContain": [{
                "type": "markdown",
                "values": "blueprint/images/overview.png"
            }]
        },
        {
            "path": "blueprint/images",
            "type": "directory",
            "shouldExist": true
        },
        {
            "path": "blueprint/images/overview.png",
            "type": "file",
            "shouldExist": true
        }
    ]
}